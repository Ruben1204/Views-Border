<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesTipoVista.Views.Borde_Vista"
             Title="Borde_Vista">
    
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center">

        <Border BackgroundColor="#4ceeff"
                StrokeThickness="15"
                Padding="10,4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50,50,0,0"/>
            </Border.StrokeShape>
            <Border.Stroke>
                <LinearGradientBrush EndPoint="1,1">
                    <GradientStop Color="#4b0082"
                                  Offset="0"/>
                    <GradientStop Color="#31a84f"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Stroke>
            <Image Source="dotnet_bot.png" WidthRequest="100" HeightRequest="100"/>
        </Border>
        
    </VerticalStackLayout>
</ContentPage>